@model Category

<form method="post">
	<input asp-for="CategoryId" hidden/>
	<div class="border p-3 mt-4">
		<div class="row pb-2"></div>
		<h2>Delete Category</h2>
		<hr />
		<div asp-validation-summary="All"></div>
		<div class="mb-3 row p-1">
			<label asp-for="Name" class="p-0">Category Name</label>
			<input asp-for="Name" type="text" class="form-control" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="mb-3 row p-1">
			<label asp-for="DisplayOrder" class="p-0">Display Order</label>
			<input asp-for="DisplayOrder" class="form-control" />
			<span asp-validation-for="DisplayOrder" class="text-danger"></span>

		</div>
		<div class="row">
			<div class="col-6 col-md-3">
				<button type="submit" class="btn btn-danger form-control">Delete</button>
			</div>
			<div class="col-6 col-md-3">
				<a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">
					Back to List
				</a>
			</div>
			<div>
			</div>
		</div>
	</div>
</form>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial"></partial>
	}
		}